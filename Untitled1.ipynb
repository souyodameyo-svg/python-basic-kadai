      "source": [
        "# 1. 値の定義\n",
        "upper_base = 10  # 上辺\n",
        "lower_base = 20  # 下辺\n",
        "height = 5       # 高さ\n",
        "\n",
        "# 2. 公式に従って計算\n",
        "# 台形の面積 = (上辺 + 下辺) * 高さ / 2\n",
        "area = (upper_base + lower_base) * height / 2\n",
        "\n",
        "# 3. 結果の表示\n",
        "print(f\"台形の面積は {area} cm² です。\")"
      ]
    }
